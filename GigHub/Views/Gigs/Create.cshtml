@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Gigs", FormMethod.Post, new { @class="" }))
{
<p class="alert alert-info width-40 marginTop-10">All Fields Are Required</p>
    @Html.AntiForgeryToken();
    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.Venue)
            @Html.TextBoxFor(m => m.Venue, htmlAttributes: new { @class = "form-control width200 marginRight2"})
            @Html.ValidationMessageFor(m => m.Venue,null, new { @class = "colorRed" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, htmlAttributes: new { @class = "form-control width200 marginRight2", placeholder = "e.g., 15 Dec 2020"})
            @Html.ValidationMessageFor(m => m.Date, null, new { @class = "colorRed" })
        </div>
    </div>

    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.Time)
            @Html.TextBoxFor(m => m.Time, new { @class = "form-control width200 marginRight2", placeholder = "e.g., 6:30 PM" })
            @Html.ValidationMessageFor(m => m.Time, null, new { @class = "colorRed" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Genre)
            @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "-Select Genre-", new { @class = "form-control width200", id = "createGenreSelectList" })
            @Html.ValidationMessageFor(m => m.Genre, null, new { @class = "colorRed" })
        </div>
    </div>
    <button class="btn" id="createSaveButton" type="submit">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}



